<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10dip"
	android:background="@color/main_bg" android:scrollbars="vertical">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="用户id"
		android:textSize="16sp" android:textColor="#333333" />

	<LinearLayout android:gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal">
		<EditText android:id="@+id/renren_demo_get_albums_uid"
			android:layout_width="220dip" android:layout_height="wrap_content"
			android:singleLine="true" android:padding="5dip" android:textSize="14sp"
			android:background="@drawable/renren_edit_text_bg" />
		<Button android:id="@+id/renren_demo_get_albums_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="查询" android:textSize="16sp" android:textColor="#000000"
			android:layout_marginLeft="20dip" />
	</LinearLayout>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="相册ids"
		android:textColor="#333333" android:textSize="16sp" />
	<EditText android:id="@+id/renren_demo_get_albums_aids"
		android:layout_width="220dip" android:layout_height="wrap_content"
		android:singleLine="true" android:padding="5dip" android:textSize="14sp"
		android:background="@drawable/renren_edit_text_bg" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip" android:orientation="vertical">
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="返回结果"
			android:textColor="#333333" android:textSize="16sp" />
		<EditText android:id="@+id/renren_demo_get_albums_result"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:singleLine="false" android:padding="5dip" android:textColor="#000000"
			android:gravity="top" android:editable="false" android:textSize="14sp"
			android:scrollbars="vertical" android:background="@drawable/renren_edit_text_bg" />
	</LinearLayout>
</LinearLayout>