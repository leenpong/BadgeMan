<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="#36c8b3" >
            

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="top"
                android:background="#36c8b3"
                android:gravity="center"
                android:text="@string/explain"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
               android:layout_height="40dip"
                android:background="#36c8b3"
                android:textColor="#ffffff"
                android:text="@string/Break" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chanping"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/morenew" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="33dip"
            android:text="@string/chanping_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tuandui"
        android:layout_weight="1"
        android:textSize="20sp" />

   

    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dip"
        android:layout_marginRight="33dip" 
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/team01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:src="@drawable/erchn" />

            <TextView
                android:id="@+id/textViewteam01"
                android:layout_width="75dp"
                android:textColor="#0085cf"
                android:layout_height="wrap_content"
                android:text="@string/ERCHN" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/team02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:src="@drawable/suki" />

            <TextView
                android:id="@+id/textViewteam02"
                android:layout_width="75dp"
                android:textColor="#0085cf"
                android:layout_height="wrap_content"
                android:text="@string/suki" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/team03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:src="@drawable/tamic" />

            <TextView
                android:id="@+id/textViewteam03"
                android:layout_width="75dp"
                android:textColor="#0085cf"
                android:layout_height="wrap_content"
                android:text="@string/Tamic" />
        </LinearLayout>
    </LinearLayout>

    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dip"
        android:layout_marginRight="33dip" 
        android:layout_weight="1"
        android:layout_marginBottom="33dip"  >

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/team04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:src="@drawable/leepong" />

            <TextView
                android:id="@+id/textViewteam04"
                android:layout_width="75dp"
                android:textColor="#0085cf"
                android:layout_height="wrap_content"
                android:text="@string/leenpong" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/team05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:src="@drawable/yibin" />

            <TextView
                android:id="@+id/textViewteam05"
                android:layout_width="75dp"
                android:textColor="#0085cf"
                android:layout_height="wrap_content"
                android:text="@string/yibin" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/team06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:src="@drawable/chenbin" />

            <TextView
                android:id="@+id/textViewteam06"
                android:layout_width="75dp"
                android:textColor="#0085cf"
                android:layout_height="wrap_content"
                android:text="@string/chenbin" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>